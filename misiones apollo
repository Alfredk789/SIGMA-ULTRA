import 'package:flutter/material.dart';

void main() => runApp(SigmaUltraApp());

class SigmaUltraApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      title: 'SIGMA ULTRA - Misiones Tripuladas',
      theme: ThemeData.dark().copyWith(
        scaffoldBackgroundColor: Colors.black,
        textTheme: ThemeData.dark().textTheme.apply(
              fontFamily: 'RobotoMono',
              bodyColor: Colors.amber[200],
            ),
      ),
      home: MisionesApolloPage(),
    );
  }
}

class MisionesApolloPage extends StatelessWidget {
  final List<Map<String, String>> misiones = [
    {
      'titulo': 'Apolo 1',
      'descripcion': 'Primera misión tripulada, cancelada tras un incendio en la cápsula durante una prueba. Los tres astronautas fallecieron.',
      'imagen': 'assets/apollo1.jpg'
    },
    {
      'titulo': 'Apolo 7',
      'descripcion': 'Primera misión tripulada exitosa del programa Apolo. Probó el módulo de comando en órbita terrestre.',
      'imagen': 'assets/apollo7.jpg'
    },
    {
      'titulo': 'Apolo 11',
      'descripcion': 'Primera misión en aterrizar en la Luna en 1969. Neil Armstrong y Buzz Aldrin caminaron sobre la superficie lunar.',
      'imagen': 'assets/apollo11.jpg'
    },
    {
      'titulo': 'Apolo 13',
      'descripcion': 'Famosa por el fallo del módulo de servicio. La tripulación regresó sana a la Tierra gracias a maniobras heroicas.',
      'imagen': 'assets/apollo13.jpg'
    },
    // Agrega más misiones conforme se requiera
  ];

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Misiones Apolo'),
        backgroundColor: Colors.black,
      ),
      body: ListView.builder(
        itemCount: misiones.length,
        itemBuilder: (context, index) {
          final mision = misiones[index];
          return Padding(
            padding: const EdgeInsets.all(12.0),
            child: Card(
              color: Colors.grey[900],
              shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(16)),
              child: Padding(
                padding: const EdgeInsets.all(16.0),
                child: Column(
                  crossAxisAlignment: CrossAxisAlignment.start,
                  children: [
                    Text(
                      mision['titulo']!,
                      style: TextStyle(
                        fontSize: 22,
                        fontWeight: FontWeight.bold,
                        color: Colors.amberAccent,
                      ),
                    ),
                    SizedBox(height: 10),
                    Text(
                      mision['descripcion']!,
                      style: TextStyle(fontSize: 16),
                    ),
                    SizedBox(height: 10),
                    ClipRRect(
                      borderRadius: BorderRadius.circular(8),
                      child: Image.asset(mision['imagen']!),
                    )
                  ],
                ),
              ),
            ),
          );
        },
      ),
    );
  }
}
